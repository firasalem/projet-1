<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.khaireddine.mygreenhouse.Ajouter_Serre">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Input_nom"
                android:layout_centerHorizontal="true"
                >
                 <EditText
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/nom_serre"
                 android:hint="Identifiant Serre"
                 android:ems="13"
                 android:inputType="text"
                     android:lines="1"
                 />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/input_hauteur"
                android:layout_below="@id/Input_nom"
                >
                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hauteur"
                android:hint="Surface"
                android:layout_centerHorizontal="true"
                android:ems="13"
                android:inputType="numberDecimal"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/input_nbr_plat"
                android:layout_below="@id/input_hauteur"
                >
                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombre_plateau"
                android:hint="Nombre de plateau"
                android:layout_centerHorizontal="true"
                android:ems="13"
                android:inputType="numberDecimal"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/adress"
                android:layout_below="@id/input_nbr_plat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adr"
                android:hint="Localisation du serre"
                    android:inputType="text"
                    android:lines="1"
                android:layout_centerHorizontal="true"
                android:ems="13"
                />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fct"
                android:text="Mode de fonctionnemnet"
                android:layout_alignStart="@id/radiofct"
                android:layout_alignLeft="@id/radiofct"
                android:layout_below="@+id/adress"/>
            <RadioGroup
                android:layout_alignStart="@+id/adress"
                android:layout_below="@+id/fct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiofct"
                android:layout_alignLeft="@+id/adress">
                <RadioButton
                    android:onClick="is_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/auto"
                android:text="automatique"
                />
                <RadioButton
                    android:onClick="is_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuelle"
                android:id="@+id/manuelle"
                />
            </RadioGroup>
            <Button
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiofct"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:onClick="nouveau_serre"
            android:text="Suivant"
                android:layout_marginBottom="10dp"
                />
            </RelativeLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaireddine.mygreenhouse.Lancer_Cultures"
    android:padding="20dp"
    android:background="@drawable/lancer"
    >
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <Spinner
       android:layout_marginHorizontal="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/plant_spinner_choix"
       android:autofillHints="helloooo"
       style="@style/SpinnerTheme1"
       ></Spinner>
    <Spinner
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serre_spinner_choix"
        android:layout_below="@id/plant_spinner_choix"
        android:autofillHints="helloooo"
        style="@style/SpinnerTheme1"
        android:popupBackground="#ffffff"
        ></Spinner>

    <Button
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lancer"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Un Nouveau type de plante?"
        android:id="@+id/button_new" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/serre_spinner_choix"
        android:text="Lancer"
        android:id="@+id/lancer"
        style="@style/ButtonStyle"
        />
</RelativeLayout>
</RelativeLayout>
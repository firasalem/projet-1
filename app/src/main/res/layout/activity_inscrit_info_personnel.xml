<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaireddine.mygreenhouse.Inscrit_info_personnel"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_inscrit"
        android:theme="@style/AppTheme.AppBarOverlay"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/ic_111"
            android:textAlignment="center"
            app:titleTextColor="@android:color/white">
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Créer un compte"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            ></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
        <TextView
        android:id="@+id/nom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/nom"
        android:layout_alignLeft="@id/nom"
        android:visibility="invisible"

        />

        <EditText
        android:id="@+id/nom"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_label"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_person"
        android:drawableTint="@color/colorPrimaryDark"
        android:hint="Nom"
        android:inputType="textPersonName"
            android:ems="8"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

        <TextView
            android:id="@+id/prenom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/prenom"
            android:layout_alignLeft="@id/prenom"
            android:visibility="invisible"
            />

        <EditText

            android:id="@+id/prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_person"
            android:drawableTint="@color/colorPrimaryDark"
            android:ems="8"
            android:hint="Prénom"
            android:inputType="textPersonName" />
    </LinearLayout>
</LinearLayout>


    <TextView
        android:id="@+id/cin_label"
        android:layout_below="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro carte d'identité"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/cin"
        android:layout_alignLeft="@id/cin"
        android:visibility="invisible"
        />

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/cin"
        android:layout_below="@+id/cin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Numéro carte d'identité"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_cin"
        android:drawableTint="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/numero_label"
        android:layout_below="@+id/cin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro Telephone"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/numero"
        android:layout_alignLeft="@id/numero"
        android:visibility="invisible"
        />

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/numero"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numero_label"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_call"
        android:drawableTint="@color/colorPrimaryDark"
        android:ems="15"
        android:hint="Numéro Telephone"
        android:inputType="number" />


    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/inscrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numero"
        android:onClick="To_compte_info"
        android:text="S'inscrire"
        style="@style/ButtonStyle"
        />
</LinearLayout>


